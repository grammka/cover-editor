@import "~nib/lib/nib/index.styl"


.wrapper
  padding 30px

.container
  width: 600px
  position: relative

.scale
  absolute top 12px right 12px
  z-index: 10
  no-select()

.scaleBtn
  size 30px
  line-height: 30px
  background-color: #fff
  cursor: pointer
  text-align: center
  user-select: none
  &:first-child
    line-height: 26px
    border-bottom 1px solid #aaa
    border-radius top 2px
  &:last-child
    border-radius bottom 2px
  &:hover
    background-color: #f0f3f7

.navig
  absolute bottom 15px right 15px
  z-index: 10

.cover
  height: 100%


.codeTitle
  margin-bottom: 15px
  font-size: 18px
  font-weight: 600

.code
  background-color: #e6e9ea
  padding 10px 16px
  line-height: 24px
  font-size: 16px
  white-space: pre
  border-radius 4px
